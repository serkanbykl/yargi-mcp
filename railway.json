{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -e ."
  },
  "deploy": {
    "startCommand": "python -m yargi_mcp",
    "healthcheckTimeout": 0,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "variables": {
    "ALLOWED_ORIGINS": "*",
    "LOG_LEVEL": "info"
  }
}
